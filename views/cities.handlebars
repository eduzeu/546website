<link rel="stylesheet" type="text/css" href="../public/css/events.css">

<header>
  <h1>{{title}}</h1>

  <!-- https://www.w3schools.com/howto/howto_css_dropdown_navbar.asp -->
  <div class="navbar">
    <a href="/home">Home Page</a>
    <div class="dropdown">
      <button class="dropbtn">
        Events
        <i class="fa fa-caret-down"></i>
      </button>
      <div class="dropdown-content">
        <a href="/events">All Events</a>
        <a href="/events/city">Search by Borough</a>
        <a href="/events/date">Search by Date</a>
      </div>
    </div>
  </div>
</header>

<main>
  <div class="searchbar">
    <form class="searchform" action="/events/city" method="POST">
      <label for="searchByBorough">Borough:</label>
      <input type="text" id="searchByBorough" name="searchByBorough" required placeholder="Enter borough name"
        title="Please enter a valid borough name">
      <input type="submit" value="Search">
    </form>
  </div>

</main>