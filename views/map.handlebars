    <main>
        <div class="content">
            <section class="input-section">
                <h2>radius</h2>
                {{!-- <label for="starting-address">Starting Address:</label>
                <input id="starting-address" type="text" placeholder="Enter a location" /> --}}
                <input id="searchTextField" type="text" placeholder="Enter a specific address" size="50">

                <form id="radius-value">
                    <label for="radius">Radius (miles):</label>
                    <select id="radius" onchange="radiusSubmit()">
                        <option disabled selected value> -- select an option -- </option>
                        <option value="0.5">1/2 mile</option>
                        <option value="1">1 miles</option>
                        <option value="1.5">1.5 miles</option>
                        <option value="2">2 miles</option>
                        <option value="2.5">2.5 miles</option>
                        <option value="3">3 miles</option>
                        <option value="3.5">3.5 miles</option>
                        <option value="4">4 miles</option>
                        <option value="4.5">4.5 miles</option>
                    </select>
                </form>

                <fieldset>
                    <legend>Filters:</legend>
                    <label><input id="coffee-checkbox" type="radio" name="filter" value="coffee"> Coffee</label>
                    <label><input id="wifi-checkbox" type="radio" name="filter" value="wifi"> Wifi</label>
                </fieldset>
            </section>
            <section class="places-feed">
                <h2>place</h2>
                <div id="wifiLocations"></div>
                <div id="coffeeLocations"></div>

        </section>

        </div>
        <aside class="sidebar">

            <section class="place-of-the-day">
                <h3> Place of The Day</h3>
                <p>Name: <span id="place-name">{{placeOfDay.name }} </span></p>
                <p>Address: <span id="place-address"> {{placeOfDay.address}}  </span></p>
                <p>Type: <span id="place-type"> {{placeOfDay.type}}</span></p>
            </section>
            <div class="map">
                <div id="map-canvas" style="height: 400px; width: 100%;"></div>
            </div>
        </aside>
    </main>


